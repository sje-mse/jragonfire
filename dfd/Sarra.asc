int rumorCount = 0;
int aboutSarraCount = 0;

// new module script
function talkSarra() {
    rumorCount = 0;
    aboutSarraCount = 0;
    cHero.Walk(cSarra.x + 10,  cSarra.y + 10, eBlock, eWalkableAreas);
    cHero.FaceCharacter(cSarra);
    dSarra_1.Start();
}

function lookSarra() {
    Display("This attractive Katta lady has the beautifully expressive eyes and the sweet smile so common to her people.");
}

function rumorSarra() {
    switch(rumorCount) {
        case 0:
            cSarra.Say("&4 There is a rumor that the last king of Silmaria was murdered. It is a very sad thing, for he was a good ruler.");
            break;
        case 1:
            cSarra.Say("&8 The gentle Healer, Julanar, is with child. This is a wonderful thing, because both she and her husband are sweet people.");
            break;
        case 2:
            cSarra.Say("&13 Many people have left Silmaria because they feared the invaders. I hope that they might be able to return soon.");
            break;
        case 3:
            cSarra.Say("&14 People in this city are talking about the crime in the streets. There seem to be more pickpockets and thieves than ever before. Such is ever the way when a city has no ruler.");
            break;
        case 4:
            cSarra.Say("&15 I have heard from my sister in Shapeir that the Sultan Harun al-Rashid, may he live forever, has been blessed by his new wife with a son.");
            break;
        case 5:
            cSarra.Say("&6 My cousin, Shema, sends word to tell you that she and Shameen are well and happy, and hopes that you are the same.");
            break;
        default:
            cSarra.Say(DIALOG_ERROR);
    }
    rumorCount += 1;
    if (rumorCount > 5) {
        rumorCount = 0;
    }
}

function askAboutSarra() {
    switch(aboutSarraCount) {
        case 0:
            cSarra.Say("&3 I am pleased, as always, to speak with you.");
            break;
        case 1:
            cSarra.Say("&7 It is a beautiful day this time of year, and I am well content, thank you.");
            break;
        case 2:
            cSarra.Say("&12 Business has been slow, for few think of romance this time of year.");
            break;
        case 3:
            cSarra.Say("&11 My day has been brightened by your presence. You are always so kind and polite.");
            break;
        case 4:
            cSarra.Say("&10 It is more damp and cool today than I am used to, but as long as the clouds do not bring rain, I am content.");
            break;
        case 5:
            cSarra.Say("&9 I have sold some jewelry today to someone who wanted to please a woman. Perhaps he will one day marry her.");
            break;
        default:
            cSarra.Say(DIALOG_ERROR);
            break;
    }
    aboutSarraCount += 1;
    if (aboutSarraCount > 5) {
        aboutSarraCount = 0;
    }
}