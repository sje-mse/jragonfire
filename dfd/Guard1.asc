// Guard 1 Interactions
function talkGuard1()
{
    cHero.Walk(cGuard1.x + 10,  cGuard1.y + 10, eBlock, eWalkableAreas);
    cHero.FaceCharacter(cGuard1);
    
    if (hallOfKings_0) {
        dHallOfKingsGuard1_0.Start();
    }
    else {
        cGuard1.Say("&1 You may enter the Hall of Kings now.");
        hallOfKings_0 = true;
    }
}

function lookGuard1()
{
    Display("The guard is watching you with a pugnacious look.  He definitely has a bad attitude.");
}